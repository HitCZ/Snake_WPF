<UserControl
  x:Class="Snake_WPF.Views.ControlSettingsControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Snake_WPF.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <StackPanel
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    DataContext="{Binding Settings, RelativeSource={RelativeSource AncestorType={x:Type local:ControlSettingsControl}}}"
    Orientation="Vertical">
    <DockPanel>
      <TextBlock DockPanel.Dock="Left" Text="Move Up" />
      <Button Content="{Binding Up}" DockPanel.Dock="Right"/>
    </DockPanel>

    <DockPanel>
      <TextBlock DockPanel.Dock="Left" Text="Move Down" />
      <Button Content="{Binding Down}" DockPanel.Dock="Right"/>
    </DockPanel>

    <DockPanel>
      <TextBlock DockPanel.Dock="Left" Text="Move Left" />
      <Button Content="{Binding Left}" DockPanel.Dock="Right"/>
    </DockPanel>

    <DockPanel>
      <TextBlock DockPanel.Dock="Left" Text="Move Right" />
      <Button Content="{Binding Right}" DockPanel.Dock="Right"/>
    </DockPanel>
  </StackPanel>
</UserControl>
